<configuration>
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%boldGreen(%d{HH:mm:ss.SSS}) %highlight(%-5level) %-36logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="svend.playground" level="debug" />

    <root level="info">
        <appender-ref ref="console" />
    </root>
</configuration>